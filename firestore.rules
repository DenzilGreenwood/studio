
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin() {
      // This list must be kept in sync with the list in src/hooks/use-is-admin.ts
      let adminUids = ['jH0K85sIfQc9i2rIaWmtA1RPNyw1'];
      return request.auth.uid in adminUids;
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Users can read, create, and update their own profile.
      // Admins can read any user profile.
      allow read, update, create: if isOwner(userId) || isAdmin();
      
      // A user can delete their own profile document (for account deletion).
      allow delete: if isOwner(userId);

      // This rule allows admins to list all user documents.
      allow list: if isAdmin();
      
      // Circumstances subcollection
      match /circumstances/{circumstanceId} {
        // Only the owner can manage their circumstances. Admins can read.
        allow read, write, delete: if isOwner(userId);
        allow list: if isOwner(userId) || isAdmin();

        // Sessions subcollection within circumstances
        match /sessions/{sessionId} {
          // Users can read and write to their own sessions.
          // Admins can read any session.
          allow read, write: if isOwner(userId) || isAdmin();
          allow list: if isOwner(userId) || isAdmin();
          
          // Messages subcollection within sessions
          match /messages/{messageId} {
            // Users can read and write messages in their own sessions.
            // Admins can read any message.
            allow read, write: if isOwner(userId) || isAdmin();
            allow list: if isOwner(userId) || isAdmin();
          }
        }
      }
    }
    
    // Feedback collection
    match /feedback/{feedbackId} {
      // Any authenticated user can create (submit) feedback.
      allow create: if request.auth != null;
      
      // Only Admins can read or list all feedback documents.
      allow read, list: if isAdmin();
      
      // No one can update or delete feedback through the client.
      allow update, delete: if false;
    }
    
    // For Collection Group Queries used by the Admin panel
    // This rule allows admins to query the 'sessions' collection group
    match /{path=**}/sessions/{sessionId} {
      allow get, list: if isAdmin();
    }
  }
}
