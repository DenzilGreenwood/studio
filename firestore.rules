rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admins can read all data for analysis purposes but cannot write,
    // to prevent accidental data modification from the admin panel.
    function isAdmin() {
      return request.auth.uid in ['aC2Azl37NBelxACXojQOuxIRq8I2'];
    }

    // Users can create, read, update, and delete their own user profile document.
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Users can manage their own sessions and the messages within them.
    match /users/{userId}/sessions/{sessionId} {
      allow read, write: if request.auth.uid == userId;
      
      // Admins can read session data for their dashboards.
      allow get: if isAdmin();

      match /messages/{messageId} {
        allow read, write: if request.auth.uid == userId;
        allow get: if isAdmin();
      }
    }
    
    // Session feedback is stored in a top-level collection.
    match /feedback/{feedbackId} {
      // Users can create feedback. Once created, it cannot be read or modified by them
      // to maintain anonymity and data integrity.
      allow create: if request.auth.uid != null;
      
      // Admins can read all feedback for analysis.
      allow read: if isAdmin();
    }

    // Default deny all other access.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
